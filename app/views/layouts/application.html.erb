<!DOCTYPE html>
<html>
  <head>
    <title>ShiftBuddy - Radiolog√≠a</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  </head>

  <body>
    <!-- Navbar Principal -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
      <div class="container-fluid">
        <!-- Logo/Brand -->
        <%= link_to root_path, class: "navbar-brand fw-bold" do %>
          üè• ShiftBuddy
        <% end %>

        <!-- Toggle button for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Items -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <!-- Dashboard -->
            <li class="nav-item">
              <%= link_to root_path, class: "nav-link #{'active' if current_page?(root_path)}" do %>
                <i class="fas fa-tachometer-alt me-1"></i>Dashboard
              <% end %>
            </li>

            <!-- Lista de Trabajo -->
            <li class="nav-item">
              <%= link_to worklist_path, class: "nav-link #{'active' if current_page?(worklist_path)}" do %>
                <i class="fas fa-list-ul me-1"></i>Lista de Trabajo
              <% end %>
            </li>

            <!-- Casos de Ense√±anza -->
            <li class="nav-item">
              <%= link_to teaching_cases_path, class: "nav-link #{'active' if current_page?(teaching_cases_path)}" do %>
                <i class="fas fa-graduation-cap me-1"></i>Ense√±anza
                <% if user_signed_in? && current_user.tasks.marked_for_teaching.count > 0 %>
                  <span class="badge bg-info ms-1"><%= current_user.tasks.marked_for_teaching.count %></span>
                <% end %>
              <% end %>
            </li>

            <!-- Casos QA -->
            <li class="nav-item">
              <%= link_to qa_cases_path, class: "nav-link #{'active' if current_page?(qa_cases_path)}" do %>
                <i class="fas fa-search me-1"></i>QA
                <% if user_signed_in? && current_user.tasks.marked_for_qa.count > 0 %>
                  <span class="badge bg-warning ms-1"><%= current_user.tasks.marked_for_qa.count %></span>
                <% end %>
              <% end %>
            </li>

            <!-- Estad√≠sticas -->
            <li class="nav-item">
              <%= link_to stats_path, class: "nav-link #{'active' if current_page?(stats_path)}" do %>
                <i class="fas fa-chart-bar me-1"></i>Estad√≠sticas
              <% end %>
            </li>
          </ul>

          <!-- Usuario y Logout -->
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <!-- Alertas STAT -->
              <% stat_count = current_user.cases.stat.where(study_status: [:pending, :in_progress]).count %>
              <% if stat_count > 0 %>
                <li class="nav-item">
                  <%= link_to worklist_path, class: "nav-link text-warning" do %>
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    <span class="badge bg-danger"><%= stat_count %></span> STAT
                  <% end %>
                </li>
              <% end %>

              <!-- Nombre del Usuario -->
              <li class="nav-item">
                <span class="nav-link text-white">
                  <i class="fas fa-user-md me-1"></i><%= current_user.full_name %>
                  <% if current_user.resident? %>
                    <small class="text-info">(<%= current_user.training_level %>)</small>
                  <% end %>
                </span>
              </li>

              <!-- Logout -->
              <li class="nav-item">
                <%= link_to destroy_user_session_path, data: { "turbo-method": :delete }, class: "nav-link text-warning" do %>
                  <i class="fas fa-sign-out-alt me-1"></i>Logout
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: "nav-link" do %>
                  <i class="fas fa-sign-in-alt me-1"></i>Iniciar Sesi√≥n
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Contenido Principal -->
    <main class="py-4">
      <!-- Flash Messages -->
      <% if notice %>
        <div class="container-fluid">
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= notice %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="container-fluid">
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
      .navbar-brand {
        font-size: 1.5rem;
      }

      .nav-link.active {
        background-color: rgba(255, 255, 255, 0.1) !important;
        border-radius: 0.375rem;
      }

      .badge {
        font-size: 0.7em;
      }

      .dropdown-header {
        color: #495057;
        font-weight: 600;
      }

      body {
        background-color: #f8f9fa;
      }

      main {
        min-height: calc(100vh - 76px);
      }
    </style>
  </body>
</html>

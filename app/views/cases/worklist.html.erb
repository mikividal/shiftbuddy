<!-- app/views/cases/worklist.html.erb -->
<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-12">
      <h1>📋 Lista de Trabajo - Radiología</h1>
      <%= link_to "← Volver al Dashboard", root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <!-- Casos STAT -->
  <% if @stat_cases.any? %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="card border-danger">
          <div class="card-header bg-danger text-white">
            <h4>🚨 CASOS STAT (<%= @stat_cases.count %>)</h4>
          </div>
          <div class="card-body">
            <% @stat_cases.each do |stat_case| %>
              <div class="row border rounded p-3 mb-2 bg-light">
                <div class="col-md-6">
                  <h5><%= stat_case.display_name %></h5>
                  <p class="mb-1"><strong>Historia:</strong> <%= stat_case.clinical_history %></p>
                  <small class="text-muted">Acceso: <%= stat_case.accession_number %> |
                    Creado: <%= time_ago_in_words(stat_case.created_at) %> ago</small>
                </div>
                <div class="col-md-6 text-right">
                  <span class="badge badge-danger badge-lg mb-2">STAT</span><br>
                  <%= link_to "🚀 LEER AHORA", stat_case, class: "btn btn-danger btn-lg" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <!-- Casos Urgentes -->
    <div class="col-md-6">
      <div class="card border-warning">
        <div class="card-header bg-warning">
          <h5>⚡ Casos Urgentes (<%= @urgent_cases.count %>)</h5>
        </div>
        <div class="card-body">
          <% if @urgent_cases.any? %>
            <% @urgent_cases.each do |urgent_case| %>
              <div class="border rounded p-2 mb-2">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= urgent_case.display_name %></strong>
                    <br><small class="text-muted"><%= urgent_case.clinical_history %></small>
                    <br><small class="text-muted"><%= time_ago_in_words(urgent_case.created_at) %> ago</small>
                  </div>
                  <div>
                    <span class="badge badge-warning">URGENTE</span><br>
                    <%= link_to "Leer", urgent_case, class: "btn btn-warning btn-sm mt-1" %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">No hay casos urgentes pendientes</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Casos en Progreso -->
    <div class="col-md-6">
      <div class="card border-primary">
        <div class="card-header bg-primary text-white">
          <h5>🔄 En Progreso (<%= @in_progress_cases.count %>)</h5>
        </div>
        <div class="card-body">
          <% if @in_progress_cases.any? %>
            <% @in_progress_cases.each do |case_in_progress| %>
              <div class="border rounded p-2 mb-2">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= case_in_progress.display_name %></strong>
                    <br><small class="text-muted">Iniciado: <%= time_ago_in_words(case_in_progress.updated_at) %> ago</small>
                  </div>
                  <div>
                    <span class="badge badge-primary">EN PROGRESO</span><br>
                    <%= link_to "Continuar", case_in_progress, class: "btn btn-primary btn-sm mt-1" %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">No hay casos en progreso</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Casos Rutina -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5>📄 Casos Rutina (<%= @routine_cases.count %>)</h5>
        </div>
        <div class="card-body">
          <% if @routine_cases.any? %>
            <div class="row">
              <% @routine_cases.each do |routine_case| %>
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <h6 class="card-title"><%= routine_case.display_name %></h6>
                      <p class="card-text small"><%= routine_case.clinical_history %></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted"><%= time_ago_in_words(routine_case.created_at) %> ago</small>
                        <%= link_to "Leer", routine_case, class: "btn btn-outline-primary btn-sm" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No hay casos rutina pendientes</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.badge-lg {
  font-size: 1rem;
  padding: 0.5rem 1rem;
}
</style>
